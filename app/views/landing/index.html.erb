<%= render_taskbar_items([
    { image_path: 'task-bar/flag.svg', alt_text: "CTF Icon", label: "CTF", link: ctf_path },
]) %>
<%= render_terminal(['ctf'], true) %>
<% kit_link = "https://www.kit.edu" %>
<% kitctf_link = "https://kitctf.de" %>

<section id="hero" class="h-screen w-full flex flex-col items-center justify-center text-center relative">
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-4 text-white">vurlo</h1>
    <div class="text-2xl md:text-3xl text-gray-200">
      <span id="typing" class="font-medium"></span>
    </div>

    <div class="absolute bottom-8">
        <button
            type="button"
            class="back-button rounded-full w-12 h-12 flex items-center justify-center hover:bg-secondary transition-colors"
            aria-label="Scroll down"
            onclick="document.getElementById('bottom').scrollIntoView({behavior:'smooth'})"
        >
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5v14M19 12l-7 7-7-7"/>
            </svg>
        </button>
    </div>
</section>

